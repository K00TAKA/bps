<div class="container py-5">
  <h2>管理者ログイン</h2>

  <%= form_with model: @admin, url: session_path(resource_name), local: true do |f| %>
  <div class="row">
    <div class="col-md-2 py-2">メールアドレス</div>
    <div class="col-md-5 py-2"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
  </div>
  <div class="row">
    <div class="col-md-2 py-2">パスワード</div>
    <div class="col-md-5 py-2"><%= f.password_field :password, autocomplete: "current-password" %></div>
  </div>
  <div class="row">
    <div class="col-md-2 py-2"></div>
    <div class="col-md-5 py-2"><%= f.submit "ログイン", class: "btn btn-primary" %></div>
  </div>
  <% end %>
</div>