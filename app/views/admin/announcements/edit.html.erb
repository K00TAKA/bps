<div class="container py-3">
  <div class="row">
    <h2>お知らせ編集</h2>
  </div>

  <%= form_with model: @announcement, url: admin_announcement_path(@announcement.id), method: :patch do |f| %>
    <div class="row p-3 form-label">
      <div class="col-sm-2"><%= f.label:"お知らせ内容" %></div>
      <div class="col-md-5"><%= f.text_area :body, class: "form-control", style: "width:100%", rows: "5" %></div>
    </div>
    <div class="row p-3">
      <div class="col-sm-2"><%= f.label:"公開/非公開" %></div>
      <div class="col-md-5">
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "公開", value: :true, class: 'active' %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "非公開", value: :false, class: 'inactive' %><br>
        <%= f.submit "更新", class:"btn btn-sm btn-success"%>
      </div>
    </div>
  <% end %>
</div>