<div class="container py-5">

  <h3>企業情報</h3>
  <div><%= flash[:notice] %></div>

  <table class="table table-borderless">
    <tr>
      <td></td>
      <td>
        <% if @company.image.attached? %>
          <%= image_tag @company.image, size: "200x200" %>
        <% else %>
          <%= image_tag 'company_free', size: "200x200" %>
        <% end %>
      </td>
    </tr>
    <tr>
      <th>企業ID</th>
      <td><%= @company.id %></td>
    </tr>
    <tr>
      <th>企業名</th>
      <td><%= @company.company %></td>
    </tr>
    <tr>
      <th>企業名(カナ)</th>
      <td><%= @company.company_kana %></td>
    </tr>
    <tr>
      <th>業種</th>
      <td><%= @company.genre %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @company.post_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @company.address %></td>
    </tr>
    <tr>
      <th>設立年月日</th>
      <td><%= @company.date_of_establishment %></td>
    </tr>
    <tr>
      <th>紹介</th>
      <td><%= @company.introduction %></td>
    </tr>

    <tr>
      <th>電話番号</th>
      <td><%= @company.tel %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @company.email %></td>
    </tr>
    <tr>
      <th>投稿コメント</th>
      <td><%= button_to "コメントを見る", admin_comment_path, method: :get,  class: 'btn btn-primary' %></td>
    </tr>
    <%= form_with model: @company, url: admin_company_path(@company.id), method: :patch do |f| %>
    <tr>
      <th>ステータス</th>
      <td>
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "表示", value: :true, class: 'active' %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "非表示", value: :false, class: 'inactive' %>
      </td>
    </tr>
    <tr>
      <th></th>
      <td><%= f.submit 'ステータスを保存', class: 'btn btn-success' %></td>
    </tr>
    <% end %>
  </table>
</div>

<style>
  h3 {
    background-color: #191970;
    color: white;
    padding: 10px;
  }
</style>
