<div class="container py-5">
  <h2>企業情報</h2>
  <div><%= flash[:notice] %></div>

  <table class="table table-borderd">
    <tr>
      <td style="width: 40%;"></td>
      <td style="width: 60%;">
        <% if @company.image.attached? %>
          <%= image_tag @company.image, size: "200x200" %>
        <% else %>
          <%= image_tag 'company_free.jpg', size: "200x200" %>
        <% end %>
      </td>
    </tr>
    <tr>
      <th>企業ID</th>
      <td><%= @company.id %></td>
    </tr>
    <tr>
      <th>企業名</th>
      <td><%= @company.company %></td>
    </tr>
    <tr>
      <th>企業名(カナ)</th>
      <td><%= @company.company_kana %></td>
    </tr>
    <tr>
      <th>業種</th>
      <td><%= @company.genre %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @company.post_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @company.address %></td>
    </tr>
    <tr>
      <th>設立年月日</th>
      <td><%= @company.date_of_establishment %></td>
    </tr>
    <tr>
      <th>紹介</th>
      <td><%= @company.introduction %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @company.tel %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @company.email %></td>
    </tr>
    <tr>
      <th>投稿コメント</th>
      <td><%= button_to "コメントを見る", admin_comment_path, method: :get,  class: 'btn btn-primary' %></td>
    </tr>
    <tr>
      <th>ステータス</th>
      <td>
        <% if @company.is_active == true %>
          <%= form_with model: @company, url: admin_company_path(@company), method: :patch do |f| %>
            <%= f.hidden_field :is_active, value: false %>
            <%= f.submit "非表示に変更", class: "btn btn-sm btn-danger" %>
          <% end %>
        <% else %>
          <%= form_with model: @company, url: admin_company_path(@company), method: :patch do |f| %>
            <%= f.hidden_field :is_active, value: true %>
            <%= f.submit "表示に変更", class: "btn btn-sm btn-success" %>
          <% end %>
        <% end %>
      </td>
    </tr>
  </table>
</div>

<style>
.container {
  font-family: "Noto Sans JP", sans-serif;
  font-optical-sizing: auto;
  font-weight: 400;
  font-style: normal;
}
.thead-info th {
  background-color: #191970; /* 青色に設定 */
  color: white; /* テキストの色を白色に設定 */
}

th {
  text-align: center;
  align-content: center;
}

td {
  text-align: start;
  align-content: center;
}

.pagination {
  justify-content: center;
}
</style>