<div>
  <%= link_to company_path(notification.visitor.company) do %>
    <%= notification.visitor.name %>さんが
  <% end %>
  <% case notification.action %>
  <% when 'message' %>
    あなたにDMを送りました
  <% when 'comment' %>
    あなたの会社にコメントしました
  <% when 'favorite' %>
    あなたのコメントにいいねしました
  <% end %>
  <% unless notification.checked %>
    <%= link_to '【既読にする】', mark_as_read_notification_path(notification), method: :patch %>
  <% end %>
  <p>通知日時: <%= notification.created_at.strftime("%Y年%m月%d日 %H:%M") %></p>
</div>