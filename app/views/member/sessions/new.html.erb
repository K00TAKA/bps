<div class="container py-5">
  <h2>ログイン</h2>
    <div class="row">
      <div class="col">
        <h3>会員の方はこちらからログイン</h3>
        <%= form_with model: @member, url: member_session_path do |f| %>

        <div class="row">
          <div class="col-md-2 py-2"><%= f.label 'メールアドレス' %></div>
          <div class="col-md-5 py-2"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
        </div>

        <div class="row">
          <div class="col-md-2 py-2"><%= f.label 'パスワード' %></div>
          <div class="col-md-5 py-2"><%= f.password_field :password, autocomplete: "current-password" %></div>
        </div>

        <div class="row">
          <div class="col-md-2 py-2"></div>
          <div class="col-md-5 py-2"><%= f.submit "ログイン", class: 'btn btn-success' %></div>
        </div>
        <% end %>

        <div>
          <h3 class="py-2">会員登録がお済でない方</h3>
          <%= link_to "こちら", new_member_registration_path, class: "underline" %>からログインしてください。
        </div>

      </div>
    </div>
</div>