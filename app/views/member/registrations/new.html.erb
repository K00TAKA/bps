<div class="container py-5">
  <h2>新規会員登録</h2>
  <%= form_with model: @member, url:member_registration_path, method: :post do |f| %>
    <%= render "member/shared/error_messages", resource: @member %>
    <table class="member_info member_form">
      <thead>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
      </thead>
      <tbody>
        <tr>
          <td class="py-2">名前</td>
          <td class="py-2"><%= f.label :first_name, "(姓)", class: "member_name" %></td>
          <td class="py-2"><%= f.text_field :first_name, autofocus: true, :placeholder =>"石川" %></td>
          <td class="py-2"><%= f.label :last_name, "(名)", class: "member_name" %></td>
          <td class="py-2"><%= f.text_field :last_name, :placeholder =>"太郎" %></td>
        </tr>
        <tr>
          <td class="py-2">名前(カナ)</td>
          <td class="py-2"><%= f.label :first_name_kana, "(セイ)" %></td>
          <td class="py-2"><%= f.text_field :first_name_kana, :placeholder =>"イシカワ" %></td>
          <td class="py-2"><%= f.label :last_name_kana, "(メイ)" %></td>
          <td class="py-2"><%= f.text_field :last_name_kana, :placeholder =>"タロウ" %></td>
        </tr>
        <tr>
          <td class="py-2"><%= f.label :email, "メールアドレス" %></td>
          <td class="py-2"></td>
          <td class="py-2"><%= f.email_field :email, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td class="py-2"><%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)" %></td>
          <td class="py-2"></td>
          <td class="py-2"><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <td class="py-2"><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
          <td class="py-2"></td>
          <td class="py-2"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <td class="py-2"></td>
          <td class="py-2"></td>
          <td class="py-2"><%= f.submit "新規登録", class: "btn btn-success" %></td>
        </tr>
        <tr>
          <td class="py-2"></td>
          <td class="py-2"></td>
          <td class="py-2">次は<strong>企業登録</strong>に進みます。</td>
        </tr>
      </tbody>
    </table>
  <% end %>

  <h2 class="pt-5">既に登録済みの方</h2>
  <p><%= link_to "こちら", new_member_session_path, class: "underline" %>からログインしてください。</p>
</div>