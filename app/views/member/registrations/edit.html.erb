<div class="container py-3">
  <h2>会員情報編集</h2>

  <%= form_with model: @member, url: member_path(@member), method: :patch do |f| %>
    <%= render "member/shared/error_messages", resource: @member %>
    <table class="table table-bordered">
      <thead>
        <th></th>
        <th></th>
        <th></th>
      </thead>
      <tbody>
        <tr>
          <td><%= f.label "氏名" %></td>
          <td><%= f.text_field :first_name %></td>
          <td><%= f.text_field :last_name %></td>
        </tr>
        <tr>
          <td><%= f.label "フリガナ" %></td>
          <td><%= f.text_field :first_name_kana %></td>
          <td><%= f.text_field :last_name_kana %></td>
        </tr>
        <tr>
          <td><%= f.label :email, "メールアドレス" %></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          <td></td>
        </tr>
      </tbody>
    </table>
    <div class="actions">
      <%= f.submit "更新", class: "btn btn-primary" %>
      <%= link_to "退会する", members_check_path, class: 'btn btn-danger' %>
    </div>
  <% end %>
</div>
