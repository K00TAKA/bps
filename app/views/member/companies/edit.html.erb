<div class="container py-3">

  <h2>
    企業情報編集
  </h2>

  <table class="table table-borderless">
  <%= form_with model: @company, url: edit_company_path(@company.id), method: :patch do |f| %>
    <tr>
      <th></th>
      <th></th>
    </tr>
    <tr>
      <th>企業名</th>
      <td><%= @company %></td>
    </tr>
    <tr>
      <th>企業名(カナ)</th>
      <td><%= @company_kana %></td>
    </tr>
    <tr>
      <th>業種</th>
      <td><%= @company.genre %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @company.post_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @company.address %></td>
    </tr>
    <tr>
      <th>設立年月日</th>
      <td><%= @company.date_of_establishment %></td>
    </tr>
    <tr>
      <th>紹介</th>
      <td><%= @company.introduction %></td>
    </tr>

    <tr>
      <th>電話番号</th>
      <td><%= @company.tel %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @company.email %></td>
    </tr>
    <tr>
      <th></th>
      <td><%= f.submit '変更を保存', class: 'btn btn-success' %></td>
    </tr>
  <% end %>
  </table>
</div>