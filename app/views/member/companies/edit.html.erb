<div class="container py-5">
  <h3>企業情報編集</h3>

  <div><%= flash[:notice] %></div>

  <table class="table table-borderless">
  <%= form_with model: @company, url: company_path(@company.id), method: :patch do |f| %>
    <tr>
      <th>企業写真</th>
      <td><%= f.file_field :image, accept: "image/*" %></td>
    </tr>
    <tr>
      <th>企業名</th>
      <td><%= f.text_field :company, autofocus: true %></td>
    </tr>
    <tr>
      <th>企業名(カナ)</th>
      <td><%= f.text_field :company_kana %></td>
    </tr>
    <tr>
      <th>業種</th>
      <td><%= f.select :genre, Company.genres.keys, class: 'form-control' %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= f.text_field :post_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <th>設立年月日</th>
      <td><%= f.text_field :date_of_establishment %></td>
    </tr>
    <tr>
      <th>紹介</th>
      <td><%= f.text_area :introduction, class: "form-control", style: "width:100%", rows: "3" %></td>
    </tr>

    <tr>
      <th>電話番号</th>
      <td><%= f.text_field :tel %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <th></th>
      <td><%= f.submit '変更を保存', class: 'btn btn-success' %> <%= link_to "戻る", member_path(@member.id), class: "btn btn-secondary" %></td>
    </tr>
  <% end %>
  </table>
</div>

<style>
  h3 {
    background-color: #191970;
    color: white;
  }
</style>