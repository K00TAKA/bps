<div class="container py-5">
  <h2>マイページ</h2>

  <div class="row">
     <h3 class="col-sm-2">企業情報</h3>
     <%= button_to "コメントを見る", comments_path, method: :get,  class: 'btn btn-primary' %>
  </div>

  <table class="table table-borderless">
    <thead>
      <th></th>
      <th></th>
    </thead>
    <tbody>
      <tr>
        <td>企業ID</td>
        <td><%= @company_id %></td>
      </tr>
      <tr>
        <td>企業名</td>
        <td><%= @company %></td>
      </tr>
      <tr>
        <td>企業名(カナ)</td>
        <td><%= @company_kana %></td>
      </tr>
      <tr>
        <td>業種</td>
        <td><%= @company_genre %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= @company_post_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= @company_address %></td>
      </tr>
      <tr>
        <td>設立年月日</td>
        <td><%= @company_date_of_establishment %></td>
      </tr>
      <tr>
        <td>紹介</td>
        <td><%= @company_introduction %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @company_tel %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @company_email %></td>
      </tr>
      <tr>
        <td><%= button_to "企業情報を編集する", edit_company_path, class: 'btn btn-success' %></td>
        <td></td>
      </tr>
    </tbody>
  </table>

  <div class="row">
     <h3 class="col-sm-2">会員情報</h3>
  </div>

  <table class="table table-bordered">
    <thead>
      <th></th>
      <th></th>
      <th></th>
    </thead>
    <tbody>
      <tr>
        <td class="col-sm-2">名前</td>
        <td class="col-sm-5"><%= @member.first_name %></td>
        <td class="col-sm-5"><%= @member.last_name %></td>
      </tr>
      <tr>
        <td class="col-sm-2">名前(カナ)</td>
        <td class="col-sm-5"><%= @member.first_name_kana %></td>
        <td class="col-sm-5"><%= @member.last_name_kana %></td>
      </tr>
        <td class="col-sm-2">メールアドレス</td>
        <td class="col-sm-10"><%= @member.email %></td>
      </tr>
      <tr>
        <td><%= button_to "会員情報を編集する", edit_member_registration_path, class: 'btn btn-success' %></td>
        <td></td>
        <td></td>
      </tr>
    </tbody>
  </table>
</div>