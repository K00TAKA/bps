<div class="container py-5">
  <h2>マイページ</h2>

  <div class="row">
     <h3>企業情報</h3>
     <%= button_to "コメントを見る", comments_path, method: :get,  class: 'btn btn-primary' %>
  </div>

  <table class="table table-borderless">
    <thead>
      <th></th>
      <th></th>
    </thead>
    <tbody>
      <tr>
        <td>企業写真</td>
        <td>
          <% if @company.image.attached? %>
            <%= image_tag @company.image, size: "200x200" %>
          <% else %>
            <%= image_tag 'company_free', size: "200x200" %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td>企業名</td>
        <td><%= @company.company %></td>
      </tr>
      <tr>
        <td>企業名(カナ)</td>
        <td><%= @company.company_kana %></td>
      </tr>
      <tr>
        <td>業種</td>
        <td><%= @company_genre %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= @company.post_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= @company.address %></td>
      </tr>
      <tr>
        <td>設立年月日</td>
        <td><%= @company.date_of_establishment %></td>
      </tr>
      <tr>
        <td>紹介</td>
        <td><%= @company.introduction %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @company.tel %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @company.email %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= button_to "企業情報を編集する", edit_company_path, class: 'btn btn-success' %></td>
        <td></td>
      </tr>
    </tbody>
  </table>

  <div class="row">
     <h3>会員情報</h3>
  </div>

  <table class="table table-borderless">
    <thead>
      <th></th>
      <th></th>
    </thead>
    <tbody>
      <tr>
        <td >名前</td>
        <td><%= @member.first_name %><%= @member.last_name %></td>
      </tr>
      <tr>
        <td>名前(カナ)</td>
        <td><%= @member.first_name_kana %><%= @member.last_name_kana %></td>
      </tr>
        <td>メールアドレス</td>
        <td><%= @member.email %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= button_to "会員情報を編集する", edit_member_registration_path, class: 'btn btn-success' %></td>
      </tr>
    </tbody>
  </table>
</div>