<div class="container py-5">
  <div class="row">
    <h2>マイページ</h2>

    <table class="table table-borderless">
      <thead class="thead-info">
        <th><h3>企業情報</h3></th>
        <th></th>
        <th></th>
      </thead>
      <tbody>
        <tr>
          <td>企業写真</td>
          <td>
            <% if @company.image.attached? %>
              <%= image_tag @company.image, size: "200x200" %>
            <% else %>
              <%= image_tag 'company_free', size: "200x200" %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td>企業名</td>
          <td><%= @company.company %></td>
        </tr>
        <tr>
          <td>企業名(カナ)</td>
          <td><%= @company.company_kana %></td>
        </tr>
        <tr>
          <td>業種</td>
          <td><%= @company.genre %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @company.post_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @company.address %></td>
        </tr>
        <tr>
          <td>設立年月日</td>
          <td><%= @company.date_of_establishment %></td>
        </tr>
        <tr>
          <td>紹介</td>
          <td><%= @company.introduction %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @company.tel %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @company.email %></td>
        </tr>
        <tr>
          <td></td>
          <td><%= link_to "企業情報を編集する", edit_company_path(@company.id), class: 'btn btn-success' %></td>
          <td><%= link_to "コメントを見る", comments_path, method: :get, class: 'btn btn-primary' %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="row">
    <table class="table table-borderless">
      <thead class="thead-info2">
        <th><h3>会員情報</h3></th>
        <th></th>
        <th></th>
      </thead>
      <tbody>
        <tr>
          <td>名前</td>
          <td><%= @member.first_name %><%= @member.last_name %></td>
        </tr>
        <tr>
          <td>名前(カナ)</td>
          <td><%= @member.first_name_kana %><%= @member.last_name_kana %></td>
        </tr>
          <td>メールアドレス</td>
          <td><%= @member.email %></td>
        </tr>
        <tr>
          <td></td>
          <td><%= link_to "会員情報を編集する", edit_member_path(@member.id), class: 'btn btn-success' %></td>
          <td></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<style>
  .thead-info th {
    background-color: #17a2b8; /* 青色に設定 */
    color: white; /* テキストの色を白色に設定 */
  }

  .thead-info2 th {
    background-color: #17a2b8; /* 青色に設定 */
    color: white; /* テキストの色を白色に設定 */
  }
</style>