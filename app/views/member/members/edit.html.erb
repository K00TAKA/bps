<div class="container py-3">
  <h2 class="py-3">会員情報編集</h2>
  <div><%= flash[:notice] %></div>

  <%= form_with model: @member, url: member_path(@member), method: :patch do |f| %>
    <%= render "member/shared/error_messages", resource: @member %>
    <table class="table table-borderless">
      <thead>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
      </thead>
      <tbody>
        <tr>
          <td class="py-2">名前</td>
          <td class="py-2"><%= f.label :first_name, "(姓)", class: "member_name" %></td>
          <td class="py-2"><%= f.text_field :first_name %></td>
          <td class="py-2"><%= f.label :last_name, "(名)", class: "member_name" %></td>
          <td class="py-2"><%= f.text_field :last_name %></td>
        </tr>
        <tr>
          <td class="py-2">名前(カナ)</td>
          <td class="py-2"><%= f.label :first_name_kana, "(セイ)" %></td>
          <td class="py-2"><%= f.text_field :first_name_kana %></td>
          <td class="py-2"><%= f.label :last_name_kana, "(メイ)" %></td>
          <td class="py-2"><%= f.text_field :last_name_kana %></td>
        </tr>
        <tr>
          <td class="py-2"><%= f.label :email, "メールアドレス" %></td>
          <td class="py-2"></td>
          <td class="py-2"><%= f.email_field :email, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td class="py-2"></td>
          <td class="py-2"></td>
          <td class="py-2"><%= f.submit "更新する", class: "btn btn-primary" %></td>
          <td class="py-2"><%= link_to "退会画面へ", members_check_path, class: 'btn btn-danger' %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>
