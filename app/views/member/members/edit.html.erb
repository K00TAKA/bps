<div class="container py-5">
  <h3>会員情報編集</h3>

  <%= form_with model: @member, url: member_path(@member), method: :patch do |f| %>
    <%= render "member/shared/error_messages", resource: @member %>
    <div class="member_info box-name">
      <strong>名前</strong><br>
      <%= f.text_field :name, autofocus: true %>
    </div>
    <div class="member_info box-name">
      <strong>名前(カナ)</strong><br>
      <%= f.text_field :name_kana %>
    </div>
    <div class="member_info box-email">
      <strong>メールアドレス</strong><br>
      <%= f.email_field :email, style: "width:30%" %>
    </div>
    <div class="box-action">
      <%= f.submit "更新する", class: "btn btn-success" %>
      <%= link_to "退会画面へ", members_check_path, class: 'btn btn-danger' %>
    </div>
  <% end %>
</div>

<style>

  h3 {
    background-color: #191970;
    color: white;
    padding: 10px;
  }

  .box-name {
    margin: 10px;
  }

  .box-email {
    margin: 10px;
  }

  .box-action {
    margin: 10px;
    border-style: none;
    height: 31px;
  }

</style>
