<div class="container">
  <div class="row">
    <div class="col">
      <table class="table table-borderless">
        <thead>
          <th>新着登録企業</th>
          <th></th>
          <th></th>
        </thead>
        <% @companies.each do |company| %>
          <% if company.is_active %>
          <tbody>
            <td>
              <% if company.image.attached? %>
                <%= image_tag company.image, size: "150x150" %>
              <% else %>
                <%= image_tag 'company_free', size: "150x150" %>
              <% end %>
            </td>
            <td><%= link_to company.company, company_path(company) %></td>
            <td><%= company.genre %></td>
          </tbody>
          <% end %>
        <% end %>
      </table>
    </div>

    <div class="col">
      <div class="row">
        <table>
          <tr>
            <th>新着お知らせ</th>
            <th></th>
          </tr>
          <% @announcements.each do |announcement| %>
          <tr>
            <th><更新日付></th>
            <td><%= announcement.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th><お知らせ></th>
            <td><%= announcement.body %></td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>